<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight=".75"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/addressField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fetchButton">

    </EditText>

    <Button
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight=".25"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/fetchButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/addressField"
        app:layout_constraintTop_toTopOf="parent">
    </Button>




    <TextView
        android:id="@+id/httpField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressField" />

</androidx.constraintlayout.widget.ConstraintLayout>